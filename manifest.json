{
  "manifest_version": 3,
  "name": "Gerador de Presentes Aleatório",
  "version": "1.0.0",
  "description": "Gera ideias de presentes bem avaliados na Amazon com base em suas escolhas.",
  "permissions": [
    "tabs"
  ],
  "background": {
    "service_worker": "background/background.js"
  },
  "action": {
    "default_title": "Gerador de Presentes Aleatório"
  },
  "icons": {
    "16": "icons/icon-16.svg",
    "48": "icons/icon-48.svg",
    "128": "icons/icon-128.svg"
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'; style-src 'self' 'unsafe-inline';"
  }
}
